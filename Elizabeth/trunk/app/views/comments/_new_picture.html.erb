<h1>New comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    Your Name: <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :comment %>:<br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.hidden_field :event_id, :value => "test" %>
	<%= f.label :event_id %><br />
    <%= f.text_field :event_id %>
  </p>
  <p>
    <%= f.label :picture_id %><br />
    <%= f.text_field :picture_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>