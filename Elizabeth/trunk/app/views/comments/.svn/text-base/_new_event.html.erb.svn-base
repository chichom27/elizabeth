
<h1>Comments</h1>



<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

<div id="commentBox">
  <div id="commentBoxName">
    Your Name: <br/><%= f.text_field :name %>
  </div>
  
<div id="commentBoxComment">
    
   Comment: <%= f.text_area :comment , :size => "30x5"%>
  </div>
  <p>
    <%= f.hidden_field :event_id, :value => @event.id %>
  </p>
  
    <%= f.submit 'Create' %>
  
</div>
<% end %>
